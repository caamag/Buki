generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Product {
  id  Int @id @default(autoincrement()) 
  name String @unique 
  description String
  stock Int
  price Float
  image String
  widthStar Boolean
  author String
  createdAt DateTime? @default(now())
}

model Users {
  id  Int @id @default(autoincrement()) 
  name String
  email String @unique
  password String
  createdAt DateTime? @default(now())
}