generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Product {
  id  Int @id @default(autoincrement()) 
  name String @unique 
  description String
  stock Int
  price Float
  image String
  widthStar Boolean
  author String
  createdAt DateTime? @default(now())

  cartItems ShoppingCart[]
}

model Users {
  id  Int @id @default(autoincrement()) 
  name String
  email String @unique
  password String
  createdAt DateTime? @default(now())

  cartItems ShoppingCart[]
}

model ShoppingCart {
  id        Int @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int
  createdAt DateTime @default(now())

  user    Users    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
}