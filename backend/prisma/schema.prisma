generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id  Int @id @default(autoincrement()) 
  name String @unique
  description String
  stock Int
  price Float
  image String
  widthStar Boolean
  createdAt DateTime? @default(now())
}

model Users {
  id  Int @id @default(autoincrement()) 
  name String
  email String @unique
  password String
  createdAt DateTime? @default(now())
}